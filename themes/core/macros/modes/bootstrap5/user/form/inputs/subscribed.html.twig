{% set classWildcard = constant('FWK\\Core\\Form\\FormFactory::CLASS_WILDCARD') %}
{% set attributeWildcard = constant('FWK\\Core\\Form\\FormFactory::ATTRIBUTE_WILDCARD') %}

<div class="form-check formFieldGroup userFieldGroup userFieldGroup{{ name|ucfirst }}">

    {% if definitionElement.type == constant('FWK\\Core\\Form\\Elements\\Button::TYPE') %}    
        {{ input|replace({ 
            (classWildcard): 'btn btn-primary', 
            (attributeWildcard): ''
        })|raw }}
    {% else %}
        {{ input|replace({ 
            (classWildcard): '', 
            (attributeWildcard): ''
        })|raw }}
    {% endif %}

</div>