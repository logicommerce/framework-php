{% macro deleteAccountForm(args) %}

	{% set classWildcard = constant('FWK\\Core\\Form\\FormFactory::CLASS_WILDCARD') %} 
    {% set attributeWildcard = constant('FWK\\Core\\Form\\FormFactory::ATTRIBUTE_WILDCARD') %}

    {%- for name, element in args.form.getOutputElements([constant('FWK\\Enums\\RichFormItems::LC_DATA_VALIDATION')]) -%}

		{% if name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_START') %}

			{{ element|replace({ (attributeWildcard): 'data-lc-form="deleteAccountForm"' }) }}
			<div class="form-message"></div>

		{% elseif name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_END') %}	
            
			{{ element }}

		{% elseif name == constant('FWK\\Core\\Form\\Form::SUBMIT') %}

        	<div class="formField formButton deleteAccountField" id="deleteAccountSubmitContainer">
				{{ element|replace({ (classWildcard): '' }) }}
			</div>	

		{% elseif name == constant('FWK\\Enums\\Parameters::PASSWORD') %}

			<div class="form-group formField deleteAccountField" id="passwordContainer">	
				{{ element|replace({ (classWildcard) : '', (attributeWildcard): '' }) }}
			</div>

		{% else %}

			{{ element }}

		{% endif %}

	{% endfor %}

{% endmacro deleteAccountForm %}
