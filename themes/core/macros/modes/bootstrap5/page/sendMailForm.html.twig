{%- macro sendMailForm(args, legalCheck) -%}
    {%- set classWildcard = constant('FWK\\Core\\Form\\FormFactory::CLASS_WILDCARD') -%} 
    {%- set attributeWildcard = constant('FWK\\Core\\Form\\FormFactory::ATTRIBUTE_WILDCARD') -%}
    {%- for name, element in args.form.outputElements([constant('FWK\\Enums\\RichFormItems::LC_DATA_VALIDATION')]) -%}
        {%- if name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_START') -%}
            {{- element|replace({ (attributeWildcard): 'data-lc-form="sendMailForm"' }) -}}
            <div class="form-message"></div>
            <div class="sendMailForm">
        {%- elseif name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_END') or name == constant('FWK\\Enums\\Parameters::CAPTCHA_TOKEN') -%}
            {{- element -}}
        {%- elseif name == constant('FWK\\Core\\Form\\Form::SUBMIT') -%}
                {{- legalCheck -}}
                <div class="formField formButton sendMailFormField form-group" id="sendMail{{- ucwords(name) -}}Container">
                    {{- element|replace({ (classWildcard): '', (attributeWildcard): '' }) -}}
                </div>
            </div>
        {%- else -%}
            {% set show = false %}
            {% if args.form.definitionElements[name].type !=  constant('FWK\\Core\\Form\\Elements\\Inputs\\InputHidden::TYPE') %}
                {% set show = true %}
                <div class="form-group formField sendMailFormField" id="sendMail{{- ucwords(name) -}}Container">
            {% endif %}
                {% if args.form.definitionElements[name].type ==  constant('FWK\\Core\\Form\\Elements\\Inputs\\InputFile::TYPE') %}
               		{% set attachmentData = {maxSize: 20} %}
                    <input data-attachemnt='{{ outputJsonHtmlString(attachmentData) }}' type="hidden" class="attachmentHiddenValue" id="{{name}}Value" name="{{name}}Value">
                {% endif %}
                {% set fillFnAttr = "" %}
                {% set fillFnClass = "" %}
                {% if name in themeConfiguration.commerce.availableFillDataFields|split(',') %}
                    {% set fillFnAttr = 'data-fill-fn="get' ~ ucwords(name) ~ '"' %}   
                    {% set fillFnClass = "js-fill-data" %}
                {% endif %}
                {{- element|replace({ (classWildcard): fillFnClass,(attributeWildcard): fillFnAttr, }) -}}
            {% if show %}
                </div>
            {% endif %}
        {%- endif -%}
    {%- endfor -%}
{%- endmacro sendMailForm -%}