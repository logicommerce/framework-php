{% macro giftsBlockMode(gifts, args) %}
    {% for gift in gifts %}
        <tr class="order orderGift orderProduct orderGift ">
            <td colspan="detaillColspan" class="order orderGift orderProduct orderGift">
                <div class="wrap-td-title">{{ languageSheet[constant('FWK\\Enums\\LanguageLabels::GIFTS')] }}</div>
                <div class="wrap-td-content">
                    <div class="wrap-td-title">{{ languageSheet[constant('FWK\\Enums\\LanguageLabels::GIFTS')] }}</div>
                    <div class="wrap-td-content">

                        {% if args.showImage %}
                            <div class="orderProductImage">
                                {% if args.linkable %}
                                    <a class="orderProductImage" href="{{ linkWildcard }}">
                                        <img class="productSmallImage orderProductImage" alt="{{ gift.name|striptags }}" src="{{ gift.image }}" onerror="this.onerror=null; this.src='{{ getAssetsImgPath(constant('FWK\\Core\\Resources\\Assets::ENVIRONMENT_THEMES')) ~ '/' ~  constant('IMAGE_MISSING_BASKET_ITEM') }}';">
                                    </a>
                                {% else %}
                                    <span class="orderProductImage">
                                        <img class="productSmallImage orderProductImage" alt="{{ gift.name|striptags }}" src="{{ gift.image }}" onerror="this.onerror=null; this.src='{{ getAssetsImgPath(constant('FWK\\Core\\Resources\\Assets::ENVIRONMENT_THEMES')) ~ '/' ~  constant('IMAGE_MISSING_BASKET_ITEM') }}';">
                                    </span>
                                {% endif %}
                            </div>
                        {% endif %}

                        <div class="orderProductInfo">
                            <span class="orderProductName orderGiftName">{{ gift.name|striptags }}</span>

                            {% if args.showBrand == true and gift.brandName|length %}
                                <span class="orderProductBrand">{{ gift.brandName }}</span>
                            {% endif %}
                            
                            {%- set skuWildcard = gift.combination.sku ? gift.combination.sku : gift.codes.sku -%}
                            {% if args.showSku == true and skuWildcard|length %}
                                <span class="orderProductSku">{{ skuWildcard }}</span>
                            {% endif %}

                            {% if args.showManufacturerSku == true and gift.codes.manufacturerSku|length %}
                                <span class="orderProductManufacturerSku">{{ gift.codes.manufacturerSku }}</span>
                            {% endif %}
        
                            {% if args.showOptions %}
                                {% import 'macros/modes/' ~ coreMode ~ '/document/utils/options.html.twig' as modeOrder %}
                                {{ modeOrder.options(gift.options, args.showOptionValuesName, args.showOptionValuesSku) }}
                            {% endif %}
                                        
                            {% if args.showCustomTags %}
                                {% import 'macros/modes/' ~ coreMode ~ '/document/utils/customTags.html.twig' as modeOrder %}
                                {{ modeOrder.customTags(gift.customTags, args) }}
                            {% endif %}
                        </div>    
                    </div>
                </div>
            </td>
            {% if args.showPrices == true %}
                <td class="order orderPrice orderProductPrice orderGift">
                </td>
            {% endif %}
            <td class="order orderQuantity orderGift">
                {{ gift.quantity }}
            </td>
            {% if args.showPrices == true %}
                <td class="order orderPrice orderProductTotal orderGift">
                </td>
            {% endif %}
        </tr>
    {% endfor %}
{% endmacro %}

{% macro giftsIndependentMode(gifts, args) %}
    {% import _self as self %}
    {% if gifts|length %}
        <table class="table order orderGifts table-mobile-first-init">
            <thead class="order orderGifts">
                <tr class="orderTitle orderGiftTitle">
                    <td class="orderTitle orderNameTitle orderGiftTitle orderGiftNameTitle">{{ languageSheet[constant('FWK\\Enums\\LanguageLabels::GIFTS')] }}</td>
                    <td class="orderTitle orderQuantityTitle orderGiftTitle orderGiftQuantityTitle">{{ languageSheet[constant('FWK\\Enums\\LanguageLabels::QUANTITY')] }}</td>
                </tr>
            </thead>
            <tbody>
                {{ self.giftsBlockMode(gifts, args) }}
            </tbody>
        </table>
    {% endif %}
{% endmacro %}
