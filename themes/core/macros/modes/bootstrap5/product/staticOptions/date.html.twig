{% macro date(productOption, args) %}

    {% if productOption.reference.values|length %}
        <div class="productStaticOption productStaticOptionDate">
            <span class="staticOptionName">{{- productOption.option.language.name -}}</span>
            <span class="staticOptionValue">{{- productOption.reference.values[0].value|date(getTwigDatePattern()) -}}</span>
        </div>
    {% endif %}

{% endmacro %}