{% macro attachment(productOption, args) %}
    {% if productOption.reference.values|length %}
        <div class="productStaticOption productStaticOptionAttachment">
            <span class="staticOptionName">{{- productOption.option.language.name -}}</span>
            <span class="staticOptionValue">
                {%- for optionReferenceValue in productOption.reference.values -%}
                    {% set fileName = optionReferenceValue.value|split('_',2) %}
                    {% if fileName|length == 2 %}
                        <a class="view-attachment" data-lc-event="click" style="" data-lc-attachment-path="{{optionReferenceValue.value}}" onclick="LC.dataEvents.openAttachmentPath(event)">{{ fileName[1] }}</a>
                        {% if not loop.last %},&nbsp;{% endif %}
                    {% endif %}
                {% endfor %}
            </span>
        </div>
    {% endif %}
{% endmacro %}