{% macro companyRolesFilter(args) %}
    {% set classWildcard = constant('FWK\\Core\\Form\\FormFactory::CLASS_WILDCARD') %} 
    {% set attributeWildcard = constant('FWK\\Core\\Form\\FormFactory::ATTRIBUTE_WILDCARD') %}
    
    {%- for name, element in args.form.outputElements([constant('FWK\\Enums\\RichFormItems::LC_DATA_VALIDATION')]) -%}
        {%- if name in args.parameters or
            name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_START') or
            name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_END') or
            name == constant('FWK\\Core\\Form\\Form::SUBMIT')-%} 
            
            {%- if name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_START') -%}
                {{ element|replace({ (attributeWildcard): 'data-lc-form="accountCompanyRolesFilterForm"' }) }}
                <div class="companyRolesParameters">
            {%- elseif name == constant('FWK\\Core\\Form\\Form::ELEMENT_FORM_END') -%}
                {{ element }}
                </div>
            {%- elseif name == constant('FWK\\Core\\Form\\Form::SUBMIT') -%}
                <div class="formField formButton companyRolesParameter form-group formFieldGroup">
                    {{ element|replace({ (classWildcard): '', (attributeWildcard) : '' }) }}
                </div>
            {%- elseif name == constant('FWK\\Enums\\Parameters::NAME') 
                or name == constant('FWK\\Enums\\Parameters::TARGET') -%}
                <div class="formField companyRolesParameter form-group formFieldGroup">
                    {{ element|replace({ (classWildcard): '', (attributeWildcard) : ''}) }}
                </div>
            {%- endif -%}
        {%- endif -%}
    {%- endfor -%}
{% endmacro companyRolesFilter %}